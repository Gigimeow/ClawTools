        { q: "John‚Äôs signature is?", options: ["A sign", "A cross", "A circle", "A star"], correct: "A cross" },
        { q: "John was the youngest son of?", options: ["Henry II", "William I", "Edward I", "Richard I"], correct: "Henry II" }
      ]
    }
  };

  let currentQuiz = null;
  let currentQuestionIndex = 0;
  let score = 0;

  function checkPassword() {
    const input = document.getElementById('passwordInput').value;
    if (input === password) {
      errorMsg.textContent = "";
      showMenu();
    } else {
      errorMsg.textContent = "Incorrect password. Try again.";
    }
  }

  function showMenu() {
    app.innerHTML = `
      <h1>History Quiz</h1>
      <button class="btn" onclick="startQuiz('edward')">üõ°Ô∏è King Edward I</button>
      <button class="btn" onclick="startQuiz('john')">üìú King John</button>
    `;
  }

  function startQuiz(quizKey) {
    currentQuiz = quizzes[quizKey];
    currentQuestionIndex = 0;
    score = 0;
    showQuestion();
  }

  function showQuestion() {
    if (currentQuestionIndex >= currentQuiz.questions.length) {
      showResults();
      return;
    }
    const questionObj = currentQuiz.questions[currentQuestionIndex];
    let optionsHTML = "";
    questionObj.options.forEach(option => {
      optionsHTML += `<button class="option-btn" onclick="selectAnswer('${option}')">${option}</button>`;
    });
    app.innerHTML = `
      <h2>${currentQuiz.title} Quiz</h2>
      <div class="question">${questionObj.q}</div>
      <div>${optionsHTML}</div>
    `;
  }

  function selectAnswer(selected) {
    const correct = currentQuiz.questions[currentQuestionIndex].correct;
    if (selected === correct) {
      score++;
    }
    currentQuestionIndex++;
    showQuestion();
  }

  function showResults() {
    app.innerHTML = `
      <h2>Quiz Finished!</h2>
      <p>Your score: ${score} / ${currentQuiz.questions.length}</p>
      <button class="btn" onclick="showMenu()">Back to Menu</button>
    `;
  }
</script>

